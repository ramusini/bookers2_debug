<div class='container'>
  <%= render 'layouts/errors', obj: @new_book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book, form_name: 'Create Book' %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@book.user_id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
          <% end %>
          <td><!--いいね機能-->
          <% if @book.favorited?(current_user) %>
            <!--一致するレコードが存在する＝すでにいいね済みの場合はdestroyアクションへ-->
            <%= link_to book_favorites_path(@book), method: :delete do %>
              <span style="color:red;"><i class="fas fa-heart"></i><%= @book.favorites.count %></span>
            <% end %>
          <% else %>
            <!--一致するレコードが存在しない＝まだいいねしていない場合はcreateアクションへ-->
            <%= link_to book_favorites_path(@book), method: :post do %>
              <span style="color:#1E90FF;"><i class="fas fa-heart"></i><%= @book.favorites.count %></span>
            <% end %>
          <% end %>
          </td>
          <td>コメント数:<%= @book.book_comments.count %></td>
        </tr>
      </table>
      <div><!--コメント一覧-->
      <% @book.book_comments.each do |book_comment| %>
        <div>
        <%= image_tag book_comment.user.get_profile_image(80,80) %>
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
        <% end %>
        </div>
        <div>
        <%= link_to book_comment.user.name, user_path(book_comment.user) %>
        </div>
      <% end %>
      </div>
      <div><!--コメント投稿フォーム-->
      <%= form_with model: [@book, @new_book_comment] do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows: '4', class: 'form-control book_title' %>
        </div>
        <%= f.submit "送信" %>
      <% end %>
      </div>
    </div>
  </div>
</div>