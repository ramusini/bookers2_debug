<div class='container'>
  <%= render 'layouts/errors', obj: @new_book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book, form_name: 'Create Book' %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to user_path(@book.user_id) do %>
            <%= image_tag @user.get_profile_image(100,100) %><br>
            <%= @user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% else %>
          <% end %>
          <!--いいね機能-->
          <td id="favorite_buttons_<%= @book.id %>">
            <%=render 'favorites/favorites', book: @book %>
          </td>
          <td>コメント数:<%= @book.book_comments.count %></td>
          <td>閲覧数<%= @book.impressions_count %></td>
        </tr>
      </table>
      <!--コメント一覧＆投稿機能-->
      <div id="book_comments_index">
        <%= render "book_comments/index", book: @book %>
      </div>
      <div id="book_comments_form">
        <%= render "book_comments/form", book: @book, new_book_comment: @new_book_comment %>
      </div>
    </div>
  </div>
</div>